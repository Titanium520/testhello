    <script type="text/javascript">
    	$(document).ready(function() {
    	    $.get( "http://localhost:8080/blockchainRaw", function(data) {
    	    	data = $.parseJSON(data);
    	    	var blocks = data['blocks'];
    	    	var nodes = data['nodes'];
    	    	var countNodes = 0;
    	    	var countBlocks = 0;
    	    	var countTransactions = 0;
    	    	var countAmount = parseFloat(0);
    	    		
    	    	for (var blockId in blocks) {
    	    		var block = blocks[blockId];
    	    		var transactions = block['transactions'];
    	    		++countBlocks;
    	    		
    	    		for (var transactionId in transactions) {
    	    			var transaction = transactions[transactionId];
    	    			++countTransactions;
    	    			countAmount += parseFloat(transaction['amount']);
    	    			
    	    			html  = '<tr>';
    	    			html += '<td>' + transaction['txid'] + '</td>';
    	    			html += '<td>' + transaction['reference'] + '</td>';
    	    			html += '<td>' + transaction['timestamp'] + '</td>';
    	    			html += '<td><span>' + transaction['amount'] + '</span></td>';
    	    			html += '<td><span class="badge badge-success">' + 'COMPLETE' + '</span></td>';
    	    			
    	    			html += '</tr>';
    	    			$( #raw(){"#transactions-table"} ).append( html );
    	    		}
    	    	}
    	    	
    	    	for (var nodeId in nodes) {
    	    		var node = nodes[nodeId];
    	    		++countNodes;
    	    	}
    	    	
    	    	$( #raw(){"#stat-nodes"} ).html( countNodes );
    	    	$( #raw(){"#stat-blocks"} ).html( countBlocks );
    	    	$( #raw(){"#stat-transactions"} ).html( countTransactions );
    	    	$( #raw(){"#stat-amount"} ).html( countAmount.toFixed(2) );
    	    });
    	});
    </script>

